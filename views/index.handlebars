<body>
  <h1>Home Kitchen Boss</h1>
  <div class="row header ">
    <div class="col s4">
      <img src="/images/boss.png" class="icon">
    </div>
    <form class="col s8"action="/api" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <label>Diet Choice</label>
          <select id="dietChoices" name="diet">
            <option value="">Not Specified</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label>Cuisine Choice</label>
          <select id="cuisineChoices" name="cuisine">
            <option value="">Not Specified</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label>Food Allergies</label>
          <select multiple id="foodAllergies" name="alergy">
            <option value="">None Specific</option>
          </select>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="text" placeholder="Search.." name="search">
          <button class="waves-effect waves-light btn" type="submit" ><i class="material-icons">search</i> Search</button>
        </div>
      </div>
    </form>
  </div>


</body>